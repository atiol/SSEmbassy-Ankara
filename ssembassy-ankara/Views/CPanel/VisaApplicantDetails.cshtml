@model ssembassy_ankara.Models.OnlineVisaApplication
@{
    ViewBag.Title = "Visa Applicant Details";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
    ViewBag.Description = "Information about " + Model.GivenNames + " " + Model.Surname;
}
<style>
    .dotted-line {
        text-decoration: dotted;
    }
</style>
<div class="page">
    <div class="row">
        <div class="col-sm-10 col-md-8 col-md-offset-2 col-sm-offset-1">
            <div class="card-panel">
                @Html.Partial("_VisaHeader")
                <div class="row">
                    <div class="col-xs-12">
                        <table class="table table-responsive">
                            <thead>
                            <tr></tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td></td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row" id="accordion">
    <!-- General Information -->
    <div class="col-sm-6 col-md-4">
        <div class="panel box box-success">
            <div class="box-header with-border">
                <h4 class="box-title">
                    <a data-toggle="collapse" data-parent="#accordion" href="#gi">
                        General Information
                    </a>
                </h4>
            </div>
            <div id="gi" class="panel-collapse collapse in">
                <div class="box-body">
                    <dl class="dl-horizontal">
                        <dt>Place of Application</dt><dd>@Model.ApplicationPlace</dd>
                        @if (Model.PreviouslyApplied)
                        {
                            <dt>Have you ever Previously Applied for South Sudan Visa:</dt><dd>@Model.PreviouslyApplied</dd>
                            <dt>If yes, Previous visa No: </dt><dd class="dotted-line">@Model.PreviousVisaNo</dd>
                            <dt>Date of Issue </dt><dd>@Model.PrevIssueDate</dd>
                            <dt>Place of Issue</dt><dd class="dotted-line">@Model.PrevIssuePlace</dd>
                            <dt>Date of Arrival in South Sudan </dt><dd class="dotted-line">@Model.PrevArrivalDate</dd>
                            <dt>Point of Entry</dt><dd class="dotted-line">@Model.PrevEntryPoint</dd>
                            <dt>Point of Exit </dt><dd class="dotted-line">@Model.PrevExitPoint</dd>
                        }
                        else
                        {
                            <dt>Have you ever Previously Applied for South Sudan Visa: </dt><dd>No</dd>
                        }
                        <dt><strong>1. Visa Type Requested: </strong></dt><dd>@Model.VisaTypeRequested.VisaType</dd>
                        <dt>Purpose of Visit: </dt><dd>@Model.PurposeOfVisit.Purpose</dd>
                        <dt>Duration of Intended Stay: </dt><dd class="dotted-line" @Model.DurationOfStay></dd>
                        <dt>Date of Intended Arrival in South Sudan : </dt><dd class="dotted-line">@Model.IntendedArrivalDate.ToString("dd/MM/yyyy")</dd>
                        <dt>Mode of Transport: </dt><dd>@Model.TransportModeId</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
    <!--Personal Information-->
    <div class="col-sm-6 col-md-4">
        <div class="panel box box-primary">
            <div class="box-header with-border">
                <h4 class="box-title">
                    <a data-toggle="collapse" data-parent="#accordion" href="#pi">
                        Personal Information
                    </a>
                </h4>
            </div>
            <div id="pi" class="panel-collapse collapse in">
                <div class="box-body">
                    <dl class="dl-horizontal">
                        <dt>Surname</dt><dd class="dotted-line">@Model.Surname</dd>
                        <dt>Given Names</dt><dd class="dotted-line">@Model.GivenNames</dd>
                        <dt>Date of Birth</dt><dd class="dotted-line">@Model.BirthDate.ToString("dd/MM/yyyy")</dd>
                        <dt>Place of Birth</dt><dd class="dotted-line">@Model.BirthPlace</dd>
                        <dt>Country of Birth</dt><dd class="dotted-line">@Model.CountryOfBirth</dd>
                        <dt>Sex</dt><dd>@Model.Sex.Gender</dd>
                        <dt>Maritial Status</dt><dd>@Model.MaritalStatus</dd>
                        <dt>Nationality / Citizenship</dt><dd>@Model.Nationality</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
    <!--Passport Details-->
    <div class="col-sm-6 col-md-4">
        <div class="panel box box-primary">
            <div class="box-header with-border">
                <h4 class="box-title">
                    <a href="#pd" data-toggle="collapse" data-parent="#accordion">Passport Details</a>
                </h4>
            </div>
            <div id="pd" class="panel-collapse collapse in">
                <div class="box-body">
                    <dl class="dl-horizontal">
                        <dt>Passport Type</dt><dd>@Model.PassportType.Type</dd>
                        <dt>Passport No</dt><dd>@Model.PassportNumber</dd>
                        <dt>Date of Issue</dt><dd>@Model.PassportDateOfIssue.ToString("dd/MM/yyyy")</dd>
                        <dt>Country of Issue</dt><dd>@Model.PassportCountryOfIssue</dd>
                        <dt>Date of Expiry</dt><dd>@Model.PassportExpiryDate.ToString("dd/MM/yyyy")</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
    <!--Professional Details-->
    <div class="col-sm-6 col-md-4">
        <div class="panel box box-primary">
            <div class="box-header with-border">
                <h4 class="box-title">
                    <a href="#od" data-toggle="collapse" data-parent="#accordion">Professional / Occupational Details</a>
                </h4>
            </div>
            <div id="od" class="panel-collapse collapse in">
                <div class="box-body">
                    <dl class="dl-horizontal">
                        <dt>Present Occupation</dt><dd class="dotted-line">@Model.PresentOccupation</dd>
                        <dt>Title</dt><dd class="dotted-line">@Model.OccupationTitle</dd>
                        <dt>Employer Name</dt><dd>@Model.EmployerName</dd>
                        <dt>Employer Address</dt><dd>@Model.EmployerAddress</dd>
                        <dt>Phone No</dt><dd>@Model.EmployerPhone</dd>
                        <dt>Email</dt><dd>@Model.EmployerEmail</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
    <!--Contact Details-->
    <div class="col-sm-6 col-md-4">
        <div class="panel box box-primary">
            <div class="box-header with-border">
                <h4 class="box-title">
                    <a href="#cd" data-toggle="collapse" data-parent="#accordion">Contact Details</a>
                </h4>
            </div>
            <div id="cd" class="panel-collapse collapse in">
                <div class="box-body">
                    <dl class="dl-horizontal">
                        <dt>Present Address</dt><dd>@Model.ApplicantPresentAddress</dd>
                        <dt>Permanent Country of Origin Address</dt><dd>@Model.ApplicantPermanentCountryAddress</dd>
                        <dt>Phone No</dt><dd class="dotted-line">@Model.ApplicantPhone</dd>
                        <dt>Mobile No</dt><dd class="dotted-line">@Model.ApplicantMobile</dd>
                        <dt>Email Address</dt><dd>@Model.ApplicantEmail</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
    <!--Spouse Details-->
    <div class="col-sm-6 col-md-4">
        <div class="panel box box-primary">
            <div class="box-header with-header">
                <h4 class="box-title">
                    <a href="#sd" data-toggle="collapse" data-parent="#accordion">Spouse Details</a>
                </h4>
            </div>
            <div id="sd" class="panel-collapse collapse in">
                <div class="box-body">
                    <dl class="dl-horizontal"></dl>
                </div>
            </div>
        </div>
    </div>
    <!--Next Of Kin Details-->
    <div class="col-sm-6 col-md-4">
        <div class="panel box box-primary">
            <div class="box-header with-header">
                <h4 class="box-title">
                    <a href="#nok" data-toggle="collapse" data-parent="#accordion">Next of Kin Details</a>
                </h4>
            </div>
            <div id="nok" class="panel-collapse collapse in">
                <div class="box-body">
                    <dl class="dl-horizontal"></dl>
                </div>
            </div>
        </div>
    </div>
    <!--Have you ever-->
    <div class="col-sm-6 col-md-4">
        <div class="panel box box-primary">
            <div class="box-header with-header">
                <h4 class="box-title">
                    <a href="#hue" data-toggle="collapse" data-parent="#accordion">Have You Ever</a>
                </h4>
            </div>
            <div id="hue" class="panel-collapse collapse in">
                <div class="box-body">
                    <dl class="dl-horizontal"></dl>
                </div>
            </div>
        </div>
    </div>
    <!--References-->
    <div class="col-sm-6 col-md-4">
        <div class="panel box box-primary">
            <div class="box-header with-header">
                <h4 class="box-title">
                    <a href="#rd" data-toggle="collapse" data-parent="#accordion">References</a>
                </h4>
            </div>
            <div id="rd" class="panel-collapse collapse in">
                <div class="box-body">
                    <dl class="dl-horizontal"></dl>
                </div>
            </div>
        </div>
    </div>
</div>

