@model ssembassy_ankara.Models.OnlineVisaApplication
@{
    ViewBag.Title = "Visa Applicant Details";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
    ViewBag.Description = "Information about " + Model.GivenNames + " " + Model.Surname;
}
@section custom_css
{
    <link href="~/Content/dashboard/visa_print.css" rel="stylesheet" type="text/css" />
}
<div class="page">
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            <div>
                <a href="@Url.Action("VisaApplicants")" class="btn btn-default">Back to List</a> <a href="@Url.Action("PrintApplicantInfo", "OnlineVisaApplication", new {id = Model.Id})" class="btn btn-success pull-right" target="_blank"><span class="glyphicon glyphicon-print"></span> Print</a>
            </div>
            <div class="card-panel">
                @Html.Partial("_VisaHeader")
                @Html.Partial("_InfoPage1")
                @Html.Partial("_InfoPage2")
                @Html.Partial("_InfoPage3")
                @Html.Partial("_InfoPage4")
                <div style="margin-top: 15px;">
                    <a href="@Url.Action("PrintApplicantInfo", "OnlineVisaApplication", new {id = Model.Id})" class="pull-right btn btn-success" target="_blank"><span class="glyphicon glyphicon-print"></span> Print</a>
                </div>
            </div>
        </div>
    </div>
</div>