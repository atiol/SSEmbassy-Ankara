@model ssembassy_ankara.Models.article

@{
    ViewBag.Title = "Preview";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
    ViewBag.Description = "#" + Model.title;
    ViewBag.Published = Model.published.ToString("d");
}
@section custom_css
{
    <style>
        .page-header {
            margin: 10px 0 5px 0;
            font-weight: bold;
        }
        .article-image {
            margin: 10px 0;
        }
        .subtitle {
            color: #ccc;
        }
    </style>
}
<div class="row">
    <div class="col-sm-10 col-sm-offset-1">
        @Html.ActionLink("Go Back", "Index", "Articles", null, new { @class = "btn btn-xs btn-primary" })
        <div class="card-panel grey lighten-5 z-depth-0">
            <h4>
                <strong>@Html.DisplayFor(model => model.title)</strong>
                <span class="pull-right">
                    @Html.ActionLink("Edit", "Edit", "Articles", new {id = Model.id}, new {@class = "btn btn-xs btn-warning"}) |
                    @Html.ActionLink("Delete", "Delete", "Articles", new {id = Model.id}, new {@class = "btn btn-xs btn-danger", onclick="return confirm('Are you sure you want to delete this article?')"})
                </span>
            </h4>
            <div class="divider"></div>
            <small class="subtitle">Published: @ViewBag.Published</small>
            <div class="article-image">
                <img src="@Url.Content("" + Model.imageUrl + "")" class="img-responsive"/>
            </div>
            <div class="article-content">
                @Html.Raw(Model.contents)
            </div>
        </div>
    </div>
</div>

@section custom_javascript
{
    <script>
        $(document).ready(function() {
            $('.article-content > p img').addClass('img-responsive');
        });
    </script>
}
