@model ssembassy_ankara.Models.ImportantNotice

@{
    ViewBag.Title = "NoticeDetails";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<div class="col-sm-10 col-sm-offset-1">
    @Html.ActionLink("Back to List", "Notices", null, new {@class = "pull-left btn btn-primary btn-xs"})
    @Html.ActionLink("Edit", "EditNotice", new { id = Model.Id }, new { @class = "btn btn-warning btn-xs pull-right" })
</div>

<div class="col-sm-10 col-sm-offset-1">
    <div class="card-panel">
        <h4>@Model.Title</h4>
        <div class="divider"></div>
        <small class="text-gray">@Model.CreatedOn.ToString("d")</small>
        @Html.Raw(Model.MessageEn)
    </div>
</div>
