@model ssembassy_ankara.Models.EmbassyMission

@{
    ViewBag.Title = "Preview Embassy Mission";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
    ViewBag.Description = "Make changes to the Embassy Mission page";
}

<div class="row">
    <div class="col-sm-10 col-sm-offset-1">
        <div class="card-panel">
            @if (Model != null)
            {
                <div class="pull-right"><a href="@Url.Action("EditEmbassyMission", new {id = Model.Id})" class="btn btn-warning btn-xs"><i class="fa fa-edit"></i> Edit</a></div>
                @Html.Raw(Model.Body)
            }
            else
            {
                <p class="text-gray">
                    <em>No content added yet!</em><br /><br />
                    <span>@Html.ActionLink("Create Page", "CreateEmbassyMission", null, new { @class = "btn btn-flat btn-success" })</span>
                </p>
            }
        </div>

    </div>
</div>
