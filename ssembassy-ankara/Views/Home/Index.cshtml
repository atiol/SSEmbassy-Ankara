@section scripts
{
    @Scripts.Render("~/bundles/bxslider")
    <script>
        $(document).ready(function() {
            $('.articlesCarousel').bxSlider({
                mode: 'horizontal',
                captions: true,
                slideWidth: 960,
                infiniteLoop: true,
                auto: true,
                prevText: '<i class="material-icons black-text">chevron_left</i>',
                nextText: '<i class="material-icons black-text">chevron_right</i>',
                pager: false
        });
        });
    </script>
}
