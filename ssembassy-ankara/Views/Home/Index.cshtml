
@{
    ViewBag.Title = "Welcome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section custom_css
{
    <style>
        .bx-viewport {
            width: 100%;
            height: auto;
        }
        .bx-caption {
            font-size: 16px;
            border: 1px solid #eee;
            padding: 0;
            background-color: #eee;
            color: rgba(0,0,0,0.9);
            text-transform: capitalize;
        }
        .articlesCarousel img {
            width: 100%;
        }
    </style>
}

@Html.Action("GetLatest5Articles", "Home")

