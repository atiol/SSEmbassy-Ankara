@model ssembassy_ankara.Models.OnlineVisaApplication

@{
    Layout = null;
    ViewBag.Title = Model.GivenNames + " | PDF";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!-- bootstrap -->
    @Styles.Render("~/css/dashboard")
    <link href="~/Content/dashboard/print.css" rel="stylesheet" type="text/css" />
    <title>@ViewBag.Title</title>
    <style>
        .header {
            
        }
        .v-note {
            border: 1px solid black;
            padding: 5px;
            margin-bottom: 20px;
        }
        .page {
            background-color: #e1e1e1;
        }
        .page .card-panel {
            margin-top: 30px;
        }
        .h-div {
            border: 0.8px solid #333;
            height: 1px;
            margin-bottom: 30px;
        }
    </style>
</head>
<body>
<!-- General Info and Personal Info -->
<div class="page">
    <div class="row">
        <div class="col-sm-10 col-md-8 col-md-offset-2 col-sm-offset-1">
            <div class="card-panel">
                @Html.Partial("_VisaHeader")
                <div class="row">
                    <div class="col-xs-12">
                        <div class="row">
                            <div class="col-xs-6">Place of Application</div>
                            <div class="col-xs-6">@Model.ApplicationPlace</div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6">Have you Previously Applied for South Sudan Visa</div>
                            @if (!Model.PreviouslyApplied)
                            {
                                <div class="col-xs-6">
                                    <span>No</span>
                                </div>
                            }
                            else
                            {
                                <div class="col-xs-6">
                                    <span>Yes</span>
                                </div>
                                <div class="col-xs-12">
                                    <div class="row">
                                        <div class="col-xs-6">
                                            Previously Visa No
                                        </div>
                                        <div class="col-xs-6">
                                            @Model.PreviousVisaNo
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-12">Date of Issue</div>
                                        <div class="col-xs-6">
                                            @Model.PrevIssueDate
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Passport Details to Spouse Info -->
<div class="page">
    <div class="row">
        <div class="col-xs-12">

        </div>
    </div>
</div>

<!-- Next of Kin to Have you ever... -->
<div class="page">
    <div class="row">
        <div class="col-xs-12">

        </div>
    </div>
</div>

<!-- References to Declaration -->
<div class="page">
    <div class="row">
        <div class="col-xs-12">

        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrapjs")
</body>
</html>
