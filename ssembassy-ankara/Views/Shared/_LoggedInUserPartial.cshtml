@model ssembassy_ankara.Models.LoggedInUser

<li class="dropdown user user-menu">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Url.Content(""+ Model.ImageUrl +"")" class="user-image" alt="User Image">
        }
        else
        {
            <img src="@Url.Content("~/Content/img/muser.png")" class="user-image" alt="User Image">
        }
        <span class="hidden-xs">@Model.FullName</span>
    </a>
    <ul class="dropdown-menu">
        <!-- User image -->
        <li class="user-header">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Url.Content(""+ Model.ImageUrl +"")" class="img-circle" alt="User Image">
            }
            else
            {
                <img src="@Url.Content("~/Content/img/muser.png")" class="img-circle" alt="User Image">
            }
            <p>
                @Model.FullName
                <small>@Model.Position</small>
            </p>
        </li>
        <!-- Menu Footer-->
        <li class="user-footer">
            <div class="pull-left">
                @Html.ActionLink("Profile", "StaffProfile", "Account", new {id = Model.Id}, new { @class = "btn btn-default btn-flat" })
            </div>
            @Html.Partial("_LoginPartial")
        </li>
    </ul>
</li>